[Unit]
Description=enigmagozcli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=enigmagozd
Group=enigmagozd
PermissionsStartOnly=true
ExecStart=/usr/bin/enigmagozcli rest-server --laddr {{GAIACLI_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

